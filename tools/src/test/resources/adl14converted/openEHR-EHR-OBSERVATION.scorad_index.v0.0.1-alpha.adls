                                                numerator matches {|0.0..100.0|}
                                                type matches {2}
                                                precision matches {0}
                                            }
                                        }
                                    }
                                    ELEMENT[id6] matches {    -- Intensity - erythema
                                        value matches {
                                            DV_ORDINAL[id9008] matches {
