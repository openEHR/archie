definition
	Node[id1] matches {	-- Specimen
		items matches {
			Node[id30] occurrences matches {0..1} matches {	-- Specimen type
				value matches {
					Coded_text[id202] matches {
						term matches {
							Terminology_term[id203] matches {
								concept matches {[ac3]}
							}
						}
					}
				}
			}
			Node[id9] matches {	-- Sampling context
				value matches {
					Text[id111] 
				}
			}
			Node[id16] occurrences matches {0..1} matches {	-- Collection date/time
				value matches {
					Date_time_value[id115] 
					Range<Date_time_value>[id116] 
				}
			}
		}
	}

