definition
	Composition[id1] matches {	-- -
		code matches {
			Terminology_term[id10] matches {
				concept matches {[at1]}
			}
		}
		category matches {
			Terminology_term[id900] matches {
				concept matches {[at2]}
				description matches {"persistent"}
			}
		}
		content matches {
			Section[id2] occurrences matches {1} matches {	-- Primary problem
				items matches {
					use_archetype Assessment[id12, s2-EHR-Assessment.problem_diagnosis.v1]
				}
			}
			Section[id3] occurrences matches {0..1} matches {
				items matches {
					use_archetype Assessment[id12, s2-EHR-Assessment.problem_diagnosis.v1]
				}
			}
			Section[id4] occurrences matches {0..1} matches {	-- Goals
				items matches {
					use_archetype Assessment[id14, s2-EHR-Assessment.goal.v1]
				}
			}
			Section[id5] occurrences matches {0..1} 	-- Plan description
			Section[id6] occurrences matches {0..1} matches {	-- Interventions
				items matches {
					Section[id7] occurrences matches {0..*} matches {	-- Intervention
						items matches {
							use_archetype Order[id8, s2-EHR-Order.medication_order.v4]
							allow_archetype Assessment[id9] occurrences matches {0..*} 	-- Targets
							use_archetype Action[id10, s2-EHR-Action.medication.v1]
						}
					}
				}
			}
			Section[id11] occurrences matches {1} 	-- Monitoring
		}
	}

